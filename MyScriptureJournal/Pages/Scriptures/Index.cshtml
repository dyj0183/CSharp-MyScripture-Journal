@page
@model MyScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Scripture";
}

<h1>Create Your Favorite Scripture</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].ScriptureName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scripture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ScriptureName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-primary">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
